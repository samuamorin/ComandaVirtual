<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.com.samuel.comandavirtual.TelaInicial">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnNovaComanda"
        android:layout_marginBottom="60dp"
        android:text="INICIAR NOVA COMANDA"
        android:layout_above="@+id/btnComandaAberta"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="IniciarNovaComanda"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnComandaAberta"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="CONTINUAR COMANDA ABERTA"
        android:onClick="ContinuarComanda"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnHistorico"
        android:layout_marginTop="60dp"
        android:text="HISTÃ“RICO DE COMANDAS"
        android:layout_below="@+id/btnComandaAberta"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="AbrirHistorico"/>



</RelativeLayout>
